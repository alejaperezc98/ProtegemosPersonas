<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_odo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Odontología"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_odoEsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="GENERAL Y ESPECIALIZADA"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="376dp"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/txt_odoSer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Servicios en:" />

            <TextView
                android:id="@+id/txt_odoGen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:text="Odontología General y Estética" />

            <TextView
                android:id="@+id/txt_ortodoncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:text="Ortodoncia" />

            <TextView
                android:id="@+id/txt_endo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:text="Endodoncia" />

            <TextView
                android:id="@+id/txt_periodoncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:text="Periodoncia" />

            <TextView
                android:id="@+id/txt_cirugiaOral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:text="Cirugia Oral" />

            <TextView
                android:id="@+id/txt_rehabilitacionOral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:text="Rehabilitación Oral" />

            <TextView
                android:id="@+id/txt_higieneOral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:text="Higiene Oral" />

            <TextView
                android:id="@+id/txt_implantologia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/presence_online"
                android:text="Implantología Oral" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_citaOdon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Agendar Cita" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>