                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="2dp">

                    <ImageButton
                        android:id="@+id/img_rev1"
                        android:layout_width="176dp"
                        android:layout_height="218dp"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/revista_pets1" />

                    <ImageButton
                        android:id="@+id/img_rev2"
                        android:layout_width="178dp"
                        android:layout_height="218dp"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/revista_edicio" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="2dp">

                    <ImageButton
                        android:id="@+id/img_rev3"
                        android:layout_width="176dp"
                        android:layout_height="218dp"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/revista_edic" />

                    <ImageButton
                        android:id="@+id/img_rev4"
                        android:layout_width="178dp"
                        android:layout_height="218dp"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/revista_edicion" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="2dp">

                    <ImageButton
                        android:id="@+id/img_rev5"
                        android:layout_width="176dp"
                        android:layout_height="218dp"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/revista_p" />

                    <ImageButton
                        android:id="@+id/img_rev6"
                        android:layout_width="178dp"
                        android:layout_height="218dp"
                        android:layout_weight="1"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/revista_prot" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="2dp">

                    <ImageButton
                        android:id="@+id/img_rev7"
                        android:layout_width="176dp"
                        android:layout_height="218dp"
